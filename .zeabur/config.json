{
  "services": [
    {
      "name": "backend",
      "buildCommand": "cd backend && npm install && npm run build",
      "startCommand": "cd backend && npm start",
      "dockerfile": "backend/Dockerfile",
      "port": 8080,
      "env": {
        "PORT": "8080",
        "NODE_ENV": "production"
      }
    },
    {
      "name": "frontend",
      "dockerfile": "frontend/Dockerfile",
      "port": 8080,
      "buildArgs": {
        "VITE_API_BASE_URL": "https://freight-api.zeabur.app"
      }
    }
  ]
}

